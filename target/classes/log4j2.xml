<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
        <Properties>
                <Property name="log-path">/var/log/myproject</Property>
        </Properties>
        <Appenders>
                <Console name="console-log" target="SYSTEM_OUT">
                        <PatternLayout
                                pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n" />
                </Console>
                <RollingFile name="myproject-reqres-file" fileName="${log-path}/myproject-reqrsp.log"
                             filePattern="${log-path}/myproject-reqrsp--%d{yyyy-MM-dd}-%i.log.gz">
                        <PatternLayout>
                                <pattern>%n%d{MM-dd-yyyy HH:mm:ss.SSS} %-5p %m%n</pattern>
                        </PatternLayout>
                        <Policies>
                                <SizeBasedTriggeringPolicy size="100 MB" />
                        </Policies>
                </RollingFile>
        </Appenders>
        <Loggers>
                <Logger name="reqRspLogger" level="INFO" additivity="false" includeLocation="true">
                        <AppenderRef ref="myproject-reqres-file" />
                <Root level="DEBUG">
                        <AppenderRef ref="ASYNC" />
                        <AppenderRef ref = "console-log" />
                        <AppenderRef ref = "myproject-reqres-file" />
                </Root>
                </Logger>
        </Loggers>
</Configuration>